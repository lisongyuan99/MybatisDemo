<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lsy99.wxmp.demo.dao.mb.NewsDao">
    <insert id="add" parameterType="cn.lsy99.wxmp.demo.entity.mb.News" useGeneratedKeys="true" keyProperty="id">
        insert into news(title, img, content) values(#{title}, #{img}, #{content})
    </insert>
    <delete id="deleteById">

    </delete>
    <select id="findById" parameterType="int" resultType="cn.lsy99.wxmp.demo.entity.mb.News">
        SELECT * FROM news WHERE id = #{id}
    </select>

</mapper>